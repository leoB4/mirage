.loadScreen
  position absolute
  top 0
  width 100%
  height 100%
  background #000
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 0.32s opacity ease-out

.load
  margin 0
  padding 0
  color #fff
  font-family Montserrat
  user-select none

.start
  margin-top 20px
  padding 10px 50px
  border 1px solid #fff
  background transparent
  color #fff
  font-size 16px
  text-transform uppercase
  cursor pointer
  outline none
  transition 0.32s ease transform
  &:hover
    transform scale(0.95)